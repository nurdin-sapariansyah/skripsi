<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masden.skripsi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkripsiMasjid">
        <activity android:name=".view.jadwal.JadwalSholatActivity"></activity>
        <activity android:name=".view.zikir.ZikirActivity" />
        <activity
            android:name=".view.SplashscreenActivity"
            android:exported="true"
            android:theme="@style/Theme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.tasbih.TasbihActivity" />
        <activity
            android:name=".view.quran.DetailActivity"
            android:theme="@style/Theme.splash" />
        <activity
            android:name=".view.doa.DoaActivity"
            android:theme="@style/Theme.doa" />
        <activity
            android:name=".view.quran.QuranActivity"
            android:theme="@style/Theme.quran" />
        <activity android:name=".view.MainActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR API KEY" />
    </application>

</manifest>